<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    android:padding="6dip">

    <TextView
        android:id="@+id/itemNameInvoice"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:text="Item Name" />

    <TextView
        android:id="@+id/itemQuantityInvoice"
        android:layout_width="122dp"
        android:layout_height="41dp"
        android:layout_alignTop="@+id/itemNameInvoice"
        android:layout_marginStart="-257dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/itemCostInvoice"
        android:text="Item Quantity" />

    <TextView
        android:id="@+id/itemCostInvoice"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="61dp"
        android:text="Item Cost" />

</RelativeLayout>

